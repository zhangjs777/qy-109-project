<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.aaa.mapper.UserMapper" >
  <resultMap id="BaseResultMap" type="com.aaa.model.User" >
    <!--
      WARNING - @mbg.generated
    -->
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="username" property="username" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="dept_id" property="deptId" jdbcType="BIGINT" />
    <result column="email" property="email" jdbcType="VARCHAR" />
    <result column="mobile" property="mobile" jdbcType="VARCHAR" />
    <result column="status" property="status" jdbcType="CHAR" />
    <result column="create_time" property="createTime" jdbcType="VARCHAR" />
    <result column="modify_time" property="modifyTime" jdbcType="VARCHAR" />
    <result column="last_login_time" property="lastLoginTime" jdbcType="VARCHAR" />
    <result column="ssex" property="ssex" jdbcType="CHAR" />
    <result column="description" property="description" jdbcType="VARCHAR" />
    <result column="avatar" property="avatar" jdbcType="VARCHAR" />
    <result column="type" property="type" jdbcType="CHAR" />
    <result column="token" property="token" jdbcType="VARCHAR" />
  </resultMap>

  <select id="selectUserAll" resultType="HashMap" parameterType="HashMap">
    select u.username,u.ssex,u.email,d.DEPT_NAME,u.mobile,u.`status`,u.create_time from t_user u LEFT JOIN t_dept d on u.dept_id = d.DEPT_ID
    <where>
      1 = 1
      <if test="username != null">
        and u.username like '%${username}%'
      </if>
      <if test="deptId != null">
        and d.dept_id like '%${deptId}%'
      </if>
    </where>
  </select>

</mapper>